<% if flash[:message] %>
    <div class="flash-message">
        <%= flash[:message] %>
    </div>
<% end %>


<h1> <%="#{@destination.city} Events" %></h1><br><br>

<div class="destination_links">
    <%= link_to "Add Event", new_destination_event_path %><br><br>
    <%= link_to "Back to Destination Page", destination_path(@destination) %><br>  
</div><br><br>

<% @events.each do |e| %>
    <div class="destination_event">

        <%= render partial: "event", locals: {destination: @destination, destination_event: e} %>

    </div><br><br>
<% end %>


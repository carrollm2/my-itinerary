<h1> Join MyItinerary! </h1>

<%= render partial: "layouts/errors", locals: {object: @user} %>

<div class = "signup_form">
    <%= form_for :user, url: '/signup' do |f| %>
        <%= f.label :username %>
        <%= f.text_field :username, required:true %><br><br>

        <%= f.label :email %>
        <%= f.email_field :email, required:true %><br><br>

        <%= f.label :password %>
        <%= f.password_field :password, required:true %><br><br>

        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, required:true %><br><br>    

        <%= f.label "Admin" %>
        <%= f.check_box :admin %><br><br>  

        <%= f.submit "Submit" %>
    <% end %>   
</div>
<h1> MyItinerary </h1>

<%= render 'layouts/flash' %>

<div class = "login_form">
    <%= form_for :user do |f| %>

        <%= f.label :username %>
        <%= f.text_field :username, required:true  %>
        <br><br>

        <%= f.label :password %>
        <%= f.password_field :password, required:true  %>
        <br><br>

        <%= f.submit "Login" %>

    <% end %>
</div>